<h2>Operator: {{operator.user}}</h2>

<fieldset>
  Subtotal: {{operator.subTotal}} <br>
  Tax: {{operator.tax}} <br>
  Total: {{operator.total}} <br>
</fieldset>
<p>
  <form action='/form-handler/{{operator.user}}' method='post'>
    
    {{#each menu}}
      {{#if sizes}}
        <br>{{name}}:<br>
        {{#each sizes}}
          <input type='radio' name='item' value='{"item": "{{@../key}}", "size": "{{@key}}" }'>
          {{@key}}: ${{this}}<br>
        {{/each}}
      
      {{else}}
        <br><input type='radio' name='item' value='{"item": "{{@key}}", "size": "na"}'>
        {{name}}: {{amt}}<br>
      {{/if}}
    {{/each}}

		<input type='submit' value='Submit'>
		<input type='submit' value='Reset' formaction='/reset/" + userID +"'>
		<a href='/'>Logout</a>
	</form>
</p>
